{
  "version": 2,
  "builds": [
    { "src": "backend/main.py", "use": "@vercel/python" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/main.py" },
    { "src": "/(.*)", "dest": "/dist/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/dist/index.html" }
  ]
}
