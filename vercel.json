{
  "version": 2,
  "builds": [
    { 
      "src": "backend/vercel_main.py", 
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "requirementsPath": "backend/requirements-vercel.txt"
      }
    },
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { "distDir": "dist" } 
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/vercel_main.py" },
    { "src": "/(.*)", "dest": "/dist/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/dist/index.html" }
  ]
}
